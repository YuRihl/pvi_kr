<div class="fs-2">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
      <div class="container-fluid">
        <ul class="navbar-nav">
          <li class="nav-item">
              <a class="nav-link text-white" href="/home">Home</a>
          </li>
          <li class="nav-item">
              <a class="nav-link text-white" href="/posts/new">Create</a>
          </li>
        </ul>
        <div class="fs-4 text-white ">
          <% if user_signed_in? %>
            <%= current_user.username %> | 
            <%= link_to 'Log out', destroy_user_session_path, class: "text-decoration-none text-reset m-2", method: :delete, data: { confirm: 'Are you sure?' } %>
          <% else %>
            <%= link_to 'Log in', new_user_session_path, class: "text-decoration-none text-reset m-2" %>
          <% end %>
        </div> 
  </nav>

  <div class="alert alert-light"><% notice %></div>
  <div class="alert alert-light"><% alert %></div>

    <% @posts.each do |post| %>
      <ul class="container-md list-unstyled border border-dark rounded-pill">
        <li class="d-flex">
        <div class="container-fluid">
          <%= link_to post.title, post, class: "text-decoration-none text-reset m-3" %>
        </div>
        <% if policy(post).update? %>
          <%= link_to 'Edit', edit_post_path(post), class: "text-decoration-none text-reset m-2 btn btn-outline-dark" %>
        <% end %>
        <% if policy(post).destroy? %>
          <%= link_to 'Delete', post_path(post), class: "text-decoration-none text-reset m-2 btn btn-outline-dark", method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
          <span class = "fs-6 mt-1"><%= post.created_at %></span>
        </li>
      </ul>
    <% end %>
    <div class="d-flex justify-content-center"><%= paginate @posts %></div>
</div>