<div>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
    <div class="container-fluid">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-white fs-2" href="/home">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white fs-2" href="/posts">All posts</a>
            </li>
        </ul>
        <div class="fs-4 text-white ">
          <% if user_signed_in? %>
            <%= current_user.email %> | 
            <%= link_to 'Log out', destroy_user_session_path, class: "text-decoration-none text-reset m-2", method: :delete, data: { confirm: 'Are you sure?' } %>
          <% else %>
            <%= link_to 'Log in', new_user_session_path, class: "text-decoration-none text-reset m-2" %>
          <% end %>
        </div> 
    </div>
  </nav>

  <div class="alert alert-light"><% notice %></div>
  <div class="alert alert-light"><% alert %></div>

<div class="container-md border border-dark rounded-pill">
  <label class="fs-3 p-3">Title: <%= @post.title %></label><br>
  <label class="fs-3 p-3">Text: <%= @post.text %></label>

</div>
</div>
